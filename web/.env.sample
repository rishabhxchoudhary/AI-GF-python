# =============================================================================
# AI Girlfriend - Environment Variables Sample
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control!

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://username:password@localhost:5432/ai_girlfriend"

# =============================================================================
# NEXTAUTH.JS AUTHENTICATION
# =============================================================================
# Generate a random secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# Your application URL
NEXTAUTH_URL="http://localhost:3000"

# =============================================================================
# OAUTH PROVIDERS
# =============================================================================
# Google OAuth (https://console.developers.google.com/)
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth (https://github.com/settings/applications/new)
GITHUB_ID="your-github-client-id"
GITHUB_SECRET="your-github-client-secret"

# =============================================================================
# AI PROVIDERS
# =============================================================================
# OpenAI API (https://platform.openai.com/api-keys)
OPENAI_API_KEY="sk-your-openai-api-key-here"

# Hugging Face API (https://huggingface.co/settings/tokens)
HUGGINGFACE_API_KEY="hf_your-huggingface-token-here"

# =============================================================================
# STRIPE PAYMENT PROCESSING
# =============================================================================
# Stripe Secret Key (https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"

# Stripe Webhook Secret (https://dashboard.stripe.com/webhooks)
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# Stripe Publishable Key (Client-side)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"

# =============================================================================
# STRIPE PRODUCT PRICE IDs (Optional)
# =============================================================================
# Create these in your Stripe Dashboard under Products
STRIPE_STARTER_PRICE_ID="price_starter_package_id"
STRIPE_POPULAR_PRICE_ID="price_popular_package_id"
STRIPE_PREMIUM_PRICE_ID="price_premium_package_id"
STRIPE_ULTIMATE_PRICE_ID="price_ultimate_package_id"

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Your application URL (production)
APP_URL="https://yourdomain.com"
NEXT_PUBLIC_APP_URL="https://yourdomain.com"

# Application name
APP_NAME="AI Girlfriend"
NEXT_PUBLIC_APP_NAME="AI Girlfriend"

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable free trial for new users
ENABLE_FREE_TRIAL="true"

# Number of free credits for new users
FREE_TRIAL_CREDITS="5"

# Enable referral system
ENABLE_REFERRAL_SYSTEM="false"

# Enable premium features
ENABLE_PREMIUM_FEATURES="true"

# =============================================================================
# CONTENT SAFETY & MODERATION
# =============================================================================
# Enable OpenAI content moderation
OPENAI_MODERATION_ENABLED="true"

# Strict content safety mode
CONTENT_SAFETY_STRICT_MODE="false"

# =============================================================================
# RATE LIMITING (Optional - Upstash Redis)
# =============================================================================
# Upstash Redis for rate limiting (https://upstash.com/)
UPSTASH_REDIS_REST_URL="https://your-redis-url.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-redis-token"

# =============================================================================
# ANALYTICS & TRACKING (Optional)
# =============================================================================
# Google Analytics 4
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"

# PostHog Analytics
POSTHOG_KEY="phc_your-posthog-key"
NEXT_PUBLIC_POSTHOG_KEY="phc_your-posthog-key"

# Enable client-side analytics
NEXT_PUBLIC_ENABLE_ANALYTICS="false"

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
# SMTP settings for transactional emails
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="noreply@yourdomain.com"

# =============================================================================
# AWS SERVICES (Optional)
# =============================================================================
# AWS credentials for S3, SES, etc.
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="your-s3-bucket-name"

# =============================================================================
# ERROR TRACKING (Optional)
# =============================================================================
# Sentry for error monitoring (https://sentry.io/)
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
NEXT_PUBLIC_SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================
# Comma-separated list of admin email addresses
ADMIN_EMAILS="admin@yourdomain.com,support@yourdomain.com"

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# Skip environment validation during build (for CI/CD)
# SKIP_ENV_VALIDATION="true"

# Enable debug mode in development
# DEBUG="true"

# =============================================================================
# SETUP INSTRUCTIONS
# =============================================================================
#
# 1. Copy this file: cp .env.sample .env.local
# 2. Fill in your actual values (never use the sample values in production!)
# 3. Set up required services:
#    - PostgreSQL database
#    - Stripe account with products configured
#    - OpenAI API account
#    - Hugging Face account
#    - Google/GitHub OAuth apps
# 4. Run database migrations: npx prisma db push
# 5. Start development server: npm run dev
#
# For production deployment, set these variables in your hosting platform
# (Vercel, Railway, etc.) instead of using .env.local
#
# =============================================================================
